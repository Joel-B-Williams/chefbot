<p id="notice"><%= notice %></p>
<div>
  <table class='recipe-list'>
    <tbody>
      <% @recipes.each do |recipe| %>
        <tr class='recipe-list-item-container'>
          <td class='recipe-list-item'><%= link_to recipe.name, recipe %></td>
          <% if logged_in? && is_admin?(current_user) %>
            <td><%= link_to image_tag('edit.png'), edit_recipe_path(recipe) %></td>
            <td><%= link_to image_tag('delete.png'), recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>